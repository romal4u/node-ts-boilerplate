{
  "name": "express-typescript-typeorm-typedi-boilerplate",
  "author": "Romal Patel",
  "version": "1.0.0",
  "description": "RESTful API boilerplate with Typescript, TypeORM, ExpressJs, TypeDI & Mocha.",
  "scripts": {
    "dev": "debug=* NODE_PATH=./src ts-node-dev --respawn ./src/index.ts",
    "build": "tsc",
    "start": "NODE_PATH=./dist node ./dist/index.js",
    "start:watch": "nodemon -r dotenv/config src/index.ts",
    "docker:dev": "docker-compose --file docker-compose.yml --file docker-compose.dev.yml --compatibility up --build",
    "m:create": "npx typeorm-ts-node-esm migration:create",
    "m:run": "npx typeorm-ts-node-commonjs migration:run -d ./src/orm/connection.ts",
    "prepare": "husky install",
    "lint": "eslint --max-warnings 0 . && npm run tsc",
    "lint-fix": "eslint --fix .",
    "lint-staged-husky": "lint-staged",
    "tsc": "tsc",
    "format-lint": "prettier --config .prettierrc -l --ignore-unknown .",
    "format-fix": "prettier --config .prettierrc --write --ignore-unknown .",
    "test": "NODE_PATH=./src mocha --require ts-node/register 'src/**/*.test.ts' --timeout 20000 --exit",
    "commit": "git-cz"
  },
  "dependencies": {
    "@types/swagger-ui-express": "^4.1.6",
    "arg": "^5.0.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-http-context": "^1.2.4",
    "helmet": "^5.0.2",
    "hi-base32": "^0.5.1",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "luxon": "^3.4.4",
    "morgan": "^1.10.0",
    "mysql2": "^2.3.3",
    "nodemon": "^3.0.1",
    "otpauth": "^9.2.1",
    "reflect-metadata": "^0.1.13",
    "swagger-autogen": "^2.23.7",
    "swagger-ui-express": "^5.0.0",
    "typedi": "^0.10.0",
    "typeorm": "^0.3.17",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@types/bcryptjs": "^2.4.6",
    "@types/body-parser": "^1.19.2",
    "@types/chai": "^4.3.1",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/mocha": "^9.1.1",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.45",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "chai": "^4.3.6",
    "commitizen": "^4.2.4",
    "dotenv": "^16.0.1",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-no-array-reduce": "^1.0.58",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.1",
    "mocha": "^9.2.2",
    "nyc": "^15.1.0",
    "prettier": "^2.6.2",
    "pretty-quick": "^3.1.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^1.1.8",
    "tsc-files": "^1.1.3",
    "typescript": "^4.9.5"
  }
}
